# Screen settings
#
# showing hosname, screen sessions, load avg, date and time. "|" as field separators
# with a green underscore line on top of status
#
caption string "%{=u kg}"
caption always
hardstatus alwayslastline
hardstatus string '%{= kG}[%{Y}%H%{g}]%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}|%{r}%l%{g}|%{B}%d/%m%{W}|%c'
termcapinfo rxvt* 'hs:ts=\E]2;:fs=\007:ds=\E]2;\007'
